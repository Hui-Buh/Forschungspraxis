
function map = makeSaliencyMap_NSS( X , Y, map_size )

    sigma = [28 0; 0 28];
    x1 = 1:65;
    [X1,X2] = meshgrid(x1,x1);
    F = mvnpdf([X1(:) X2(:)],[floor(mean(x1)) floor(mean(x1))] ,sigma);
    F  = reshape(F,length(x1),length(x1));
    
    map = zeros( map_size(1)+128, map_size(2)+128);

    for i = 1 : length(X)
      map( Y(i):Y(i)+65 , X(i):X(i)+65 ) = map( Y(i):Y(i)+65 , X(i):X(i)+65 ) + F;
    end
    
    map = map(65:end-65,65:end-65);
end